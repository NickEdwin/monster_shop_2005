<h1>Order Show page</h1>
<p> Customer Name: <%= @order.name %> </p>
<p> Customer Address: <%= @order.address %> </p>
<h3> Order Contents: </h3>

<% @order.items.each do |item| %>
<% order_item = ItemOrder.where('item_orders.item_id = ?', item.id).first%>
  <section class = "order-item-<%= item.id %>">
    <section class = "item-show-grid">
      <section class = "item-show-item">
        <img src= <%= item.image %> >
      </section>
    </section>
    <h3> <%= link_to item.name, "/items/#{item.id}" %></h3>
    <p> Item Quantity: <%= order_item.quantity %></p>
    <p> Item Price: <%= item.price %> </p>
    <% if (order_item.quantity <= item.inventory) && (order_item.status == "nil") %>
      <%= link_to "Fulfill Order", "/merchant/orders/#{item.id}/update", method: :patch  %>
    <% elsif (order_item.quantity > item.inventory) && (order_item.status == "nil")%>
      <p>Can not fullfull order due to lack of inventory</p>
    <% else %>
      <p>Fulfilled</p>
    <% end %>
  </section>
  <hr>
<% end %>
