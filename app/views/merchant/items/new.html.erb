<h1>Add New Item</h1>

<center>
  <%= form_tag "/merchant/items", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name%>

    <%= label_tag :description %>
    <%= text_field_tag :description %>

    <%= label_tag :price %>
    <%= text_field_tag :price %>

    <%= label_tag :image %>
    <%= text_field_tag :image, "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSdrF1u_GSYOgpnRJ-2EC87fkfF8sVBC2LZ4A&usqp=CAU" %>

    <%= label_tag :inventory %>
    <%= text_field_tag :inventory %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>
