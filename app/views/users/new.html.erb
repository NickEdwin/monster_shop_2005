<h3>Register as a First Time User</h3>
<h5>*Note - This address will be nicknamed as "Home" for quick shipping</h5>
<h5>You can create and select multiple addresses later</h5>

<div class="new_user_form">
  <%= form_tag '/register', method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %><br>
    <%= label_tag :address %>
    <%= text_field_tag :address, params[:address] %><br>
    <%= label_tag :city %>
    <%= text_field_tag :city, params[:city] %><br>
    <%= label_tag :state %>
    <%= text_field_tag :state, params[:state] %><br>
    <%= label_tag :zip %>
    <%= text_field_tag :zip, params[:zip] %><br>
    <%= label_tag :email %>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %><br>
    <%= submit_tag "Register User" %>
    <% end %>
</div>
